                       bytestring >=0.10 && <0.11,
                       transformers >=0.4 && <0.5,
                       time >=1.5 && <1.6,
                       directory >=1.2 && <1.3,
                       filepath >=1.4 && <1.5,
                       text >=1.2 && <1.3,
                       containers >=0.5 && <0.6,
                       stm,
                       lens,
                       cereal,
                       network,
                       async,
                       either,
                       aeson,
                       base64-bytestring,
                       yaml,
                       tetrode-ephys,
                       vector >=0.10 && <0.11
  hs-source-dirs:      src
  default-language:    Haskell2010
