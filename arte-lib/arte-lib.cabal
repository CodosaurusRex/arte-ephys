library
  exposed-modules:
                  System.Arte.DataPublisher,
                  -- MockData is not a module, seems to be intended as a
                  -- program entry point but main = undefined
                  -- System.Arte.MockData,
                  System.Arte.FileUtils,
                  System.Arte.NetMessage,
                  System.Arte.Net,
                  System.Arte.CommandPort
  other-extensions:    TemplateHaskell,
                       DeriveDataTypeable,
                       NoMonomorphismRestriction,
                       TupleSections,
                       OverloadedStrings,
                       DeriveGeneric,
                       RecordWildCards,
                       ScopedTypeVariables,
                       GeneralizedNewtypeDeriving,
                       DeriveFunctor
